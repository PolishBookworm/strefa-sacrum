<ScreenFuenf>:
    FloatLayout:

#ten_złoty_pasek_na_górze
        canvas:
            Color:
                rgba: config.kolor_akcentu
            Rectangle:
                pos: self.pos
                size: self.size

        ScrollView:
            id: lajout
            #do_scroll_x: False
            #do_scroll_y: True
            size_hint: 1, None

#tutaj_koktent
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height

                Label:
                    id: opis
                    markup: True
                    text: "Diecezja rzeszowska (łac. Dioecesis Resoviensis) – diecezja rzymskokatolicka erygowana przez papieża Jana Pawła II 25 marca 1992 bullą Totus tuus Poloniae populus z wydzielenia obszarów diecezji przemyskiej i diecezji tarnowskiej, sufragania metropoli przemyskiej.\n\nBiskupi:\n    Biskup diecezjalny: bp Jan Wątroba (od 2013)\n    Biskup senior: bp Kazimierz Górny (od 2013)\n    Biskup senior: bp Edward Białogłowski (od 2022)\nGłówne świątynie:\n    Katedra:\n        Najświętszego Serca Pana Jezusa w Rzeszowie\n    Kolegiaty:\n        Bożego Ciała w Bieczu\n        Wniebowzięcia Najświętszej Maryi Panny w Jaśle\n        Wszystkich Świętych w Kolbuszowej\n        Niepokalanego Poczęcia Najświętszej Maryi Panny i Bożego Ciała w Strzyżowie\n    Bazyliki:\n        Wniebowzięcia NMP, oo. bernardyni, Rzeszów\n        Narodzenia NMP, Gorlice\n        Matki Bożej Saletyńskiej, xx. saletyni, Dębowiec\n[i] Źródło: Wikipedia.pl [/i]"
                    font_name: "czcionka"
                    color: config.kolor_tekstu
                    text_size: self.width, None
                    size_hint_y: None
                    height: self.texture_size[1]
                    padding: 10, 10

                    canvas.before:
                        Color:
                            rgba: config.kolor_tla
                        Rectangle:
                            pos: self.pos
                            size: self.size

                Label:
                    id: wypelniacz
                    size_hint: 1, None

                    canvas.before:
                        Color:
                            rgba: config.kolor_tla
                        Rectangle:
                            pos: self.pos
                            size: self.size
        HamburgerMenu:
            id: menu
            current_tab: 5


