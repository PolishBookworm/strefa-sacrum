#:kivy 2.3.0
#:import join os.path.join
#:import config config

# see editing_foreword.txt


<ScreenZwei>:
    FloatLayout:

#ten_złoty_pasek_na_górze
        canvas:
            Color:
                rgba: config.kolor_akcentu
            Rectangle:
                pos: self.pos
                size: self.size

        ScrollView:
            id: lajout
            #do_scroll_x: False
            #do_scroll_y: True
            size_hint: 1, None

#tutaj_koktent
            BoxLayout:
                orientation: 'vertical'
                size_hint: (1,1)

                canvas.before:
                    Color:
                        rgba: config.kolor_tla
                    Rectangle:
                        pos: self.pos
                        size: self.size

                ParishSearchBox:

        HamburgerMenu:
            id: menu
            current_tab: 2


<ParishSearchBox>:
    hint: "Wyszukaj parafię po nazwie lub miejscowości"
    ParishList:
        id: result_list