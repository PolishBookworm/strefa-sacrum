<ScreenZwei>:
    FloatLayout:

#ten_złoty_pasek_na_górze
        canvas:
            Color:
                rgba: config.kolor_akcentu
            Rectangle:
                pos: self.pos
                size: self.size

        ScrollView:
            id: lajout
            #do_scroll_x: False
            #do_scroll_y: True
            size_hint: 1, None

#tutaj_koktent
            BoxLayout:
                orientation: 'vertical'
                # size_hint_y: None
                size_hint: (1,1)
                # height: self.minimum_height

                canvas.before:
                    Color:
                        rgba: config.kolor_tla
                    Rectangle:
                        pos: self.pos
                        size: self.size

                SearchBox:

