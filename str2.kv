                size_hint: 1, None
                height: config.wysokosc_opcji
                text: config.s2_name
                font_name: config.czcionka
                color: config.kolor_tekstu
                kart: 2
                on_press: root.karta(self.kart)
            Button:
                background_color: 0, 0, 0, 0
                size_hint: 1, None
                height: config.wysokosc_opcji
                text: config.s3_name
                font_name: config.czcionka
                color: config.kolor_tekstu
                kart: 3
                on_press: root.karta(self.kart)
            Button:
                background_color: 0, 0, 0, 0
                size_hint: 1, None
                height: config.wysokosc_opcji
                text: config.s4_name
                font_name: config.czcionka
                color: config.kolor_tekstu
                kart: 4
                on_press: root.karta(self.kart)
            Button:
                background_color: 0, 0, 0, 0
                size_hint: 1, None
                height: config.wysokosc_opcji
                text: config.s5_name
                font_name: config.czcionka
                color: config.kolor_tekstu
                kart: 5
                on_press: root.karta(self.kart)
            Button:
                background_color: 0, 0, 0, 0
                size_hint: 1, None
                height: config.wysokosc_opcji
                text: config.s6_name
                font_name: config.czcionka
                color: config.kolor_tekstu
                kart: 6
                on_press: root.karta(self.kart)
            Button:
                background_color: 0, 0, 0, 0
                size_hint: 1, None
                height: config.wysokosc_opcji
                text: config.s7_name
                font_name: config.czcionka
                color: config.kolor_tekstu
