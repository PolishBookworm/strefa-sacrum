#:kivy 2.3.1
#:import join os.path.join
#:import config config

# see editing_foreword.txt


<ScreenUnendlich>:
    nazwa_parafii_label: nazwa_parafii_label

    FloatLayout:

#ten_złoty_pasek_na_górze
        canvas:
            Color:
                rgba: config.kolor_akcentu
            Rectangle:
                pos: self.pos
                size: self.size

        ScrollView:
            id: lajout
            #do_scroll_x: False
            #do_scroll_y: True
            size_hint: 1, None

#tutaj_koktent
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height

                Label:
                    id: nazwa_parafii_label
                    # text: 'Ave Caesar morituri te salutant\n' * 314  # Repeat text to make it scrollable
                    font_name: config.czcionka
                    color: config.kolor_tekstu
                    text_size: self.width, None
                    size_hint_y: None  # Allow the label to have a specific height
                    height: self.texture_size[1]  # Set height based on the label's content
                    padding: 10, 10

                    canvas.before:
                        Color:
                            rgba: config.kolor_tla
                        Rectangle:
                            pos: self.pos
                            size: self.size



#tło_pod_opcjami
        FloatLayout:
            id: opcie

            pos_hint: {"x": 0, "y": 0}
            size_hint: None, None
            width: config.szerokosc_opcji

            canvas:
                Color:
                    rgba: config.kolor_tla[0], config.kolor_tla[1], config.kolor_tla[2], root.menu_wi
                Rectangle:
                    pos: self.pos
                    size: self.size

#opcje
        BoxLayout:
            id: pudlo

            disabled: root.menu_wl
            opacity: root.menu_wi
            orientation: "vertical"

            size_hint: None, 1
            width: config.szerokosc_opcji
            height: config.wysokosc_menu


            Label:
                size_hint: 1, None
                height: "48dp"
            Button:
                background_color: 0, 0, 0, 0
                size_hint: 1, None
                height: config.wysokosc_opcji
                text: config.s0_name
                font_name: config.czcionka
                color: config.kolor_tekstu
                kart: 0
                on_press: root.karta(self.kart)
            Button:
                background_color: 0, 0, 0, 0
                size_hint: 1, None
                height: config.wysokosc_opcji
                text: config.s1_name
                font_name: config.czcionka
                color: config.kolor_tekstu
                kart: 1
                on_press: root.karta(self.kart)
            Button:
                background_color: 0, 0, 0, 0
                size_hint: 1, None
                height: config.wysokosc_opcji
                text: config.s2_name
                font_name: config.czcionka
                color: config.kolor_tekstu
                kart: 2
                on_press: root.karta(self.kart)
            Button:
                background_color: 0, 0, 0, 0
                size_hint: 1, None
                height: config.wysokosc_opcji
                text: config.s3_name
                font_name: config.czcionka
                color: config.kolor_tekstu
                kart: 3
                on_press: root.karta(self.kart)
            Button:
                background_color: 0, 0, 0, 0
                size_hint: 1, None
                height: config.wysokosc_opcji
                text: config.s4_name
                font_name: config.czcionka
                color: config.kolor_tekstu
                kart: 4
                on_press: root.karta(self.kart)
            Button:
                background_color: 0, 0, 0, 0
                size_hint: 1, None
                height: config.wysokosc_opcji
                text: config.s5_name
                font_name: config.czcionka
                color: config.kolor_tekstu
                kart: 5
                on_press: root.karta(self.kart)
            Button:
                background_color: 0, 0, 0, 0
                size_hint: 1, None
