#trzy_kreski -> włącz/wyłącz
        ToggleButton:
            size_hint: None, None
            size: "48dp", "48dp"
            top: root.top
            on_state: root.wlacznik_menu(self)
            background_down: join("resources", "menu_button.png")
            background_normal: join("resources", "menu_button.png")