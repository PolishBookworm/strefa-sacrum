#:kivy 2.3.0
#:import join os.path.join
#:import config config

<HamburgerMenu>:
#tło_pod_opcjami
    FloatLayout:
        id: opcie

        pos_hint: {"x": 0, "y": 0}
        size_hint: None, None
        width: config.szerokosc_opcji

        canvas:
            Color:
                rgba: config.kolor_tla[0], config.kolor_tla[1], config.kolor_tla[2], root.parent.parent.menu_wi
            Rectangle:
                pos: self.pos
                size: self.size

#opcje
    BoxLayout:
        id: pudlo

        disabled: root.parent.parent.menu_wl
        opacity: root.parent.parent.menu_wi
        orientation: "vertical"

        size_hint: None, 1
        width: config.szerokosc_opcji
        height: config.wysokosc_menu


        Label:
            size_hint: 1, None
            height: "48dp"
        Button:
            # background_color: 0, 0, 0, .1
            background_color: config.kolor_szary if root.current_tab == 0 else config.kolor_bialy
            size_hint: 1, None
            height: config.wysokosc_opcji
            text: config.s0_name
            font_name: config.czcionka
            color: config.kolor_tekstu
            kart: 0
            on_press: root.parent.parent.karta(self.kart)
