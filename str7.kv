#:kivy 2.3.0
#:import join os.path.join
#:import config config

# see editing_foreword.txt


<ScreenSieben>:
    FloatLayout:

#ten_złoty_pasek_na_górze
        canvas:
            Color:
                rgba: config.kolor_akcentu
            Rectangle:
                pos: self.pos
                size: self.size

        ScrollView:
            id: lajout
            #do_scroll_x: False
            #do_scroll_y: True
            size_hint: 1, None

#tutaj_koktent
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height

                Label:
                    # text: 'Ave Caesar morituri te salutant\n' * 314  # Repeat text to make it scrollable
                    text: "Alleluja!\nJesteśmy grupą znajomych, która chciała wykorzystać swoje zainteresowania programistyczne do niecnych celów."
                    font_name: config.czcionka
                    color: config.kolor_tekstu
                    text_size: self.width, None
                    size_hint_y: None  # Allow the label to have a specific height
                    height: self.texture_size[1]  # Set height based on the label's content
                    padding: 10, 10

                    canvas.before:
                        Color:
                            rgba: config.kolor_tla
                        Rectangle:
                            pos: self.pos
                            size: self.size

        HamburgerMenu:
            id: menu
            current_tab: 7
