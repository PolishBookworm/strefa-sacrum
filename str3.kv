<ScreenDrei>:
    mapview: mapview

    FloatLayout:

#ten_złoty_pasek_na_górze
        canvas:
            Color:
                rgba: config.kolor_akcentu
            Rectangle:
                pos: self.pos
                size: self.size

        # ScrollView:
        FloatLayout: # ScrollView collides with map interaction
            id: lajout
            #do_scroll_x: False
            #do_scroll_y: True
            size_hint: 1, None

#tutaj_koktent
            # FloatLayout:
            BoxLayout:
                orientation: 'vertical'
                # size_hint_y: None
                size_hint: (1,1)
                # height: self.minimum_height

                MapView:
                    id: mapview
                    on_parent: self.center_on(50.0412, 21.9991)
                    zoom: 10

                    # MapMarkerPopup:
                    #     lat: 50.039593550126796
                    #     lon: 21.999932593020528
                    #     on_release: config.marker_popup(self.lat, self.lon)



#tło_pod_opcjami
        FloatLayout:
            id: opcie

            pos_hint: {"x": 0, "y": 0}
            size_hint: None, None
            width: config.szerokosc_opcji

            canvas:
                Color:
                    rgba: config.kolor_tla[0], config.kolor_tla[1], config.kolor_tla[2], root.menu_wi
                Rectangle:
                    pos: self.pos
                    size: self.size

#opcje
        BoxLayout:
            id: pudlo

            disabled: root.menu_wl
            opacity: root.menu_wi
            orientation: "vertical"

            size_hint: None, 1
            width: config.szerokosc_opcji
            height: config.wysokosc_menu


            Label:
                size_hint: 1, None
                height: "48dp"
            Button:
                background_color: 0, 0, 0, 0
                size_hint: 1, None
                height: config.wysokosc_opcji
                text: config.s0_name
                font_name: config.czcionka
                color: config.kolor_tekstu
                kart: 0
                on_press: root.karta(self.kart)
            Button:
                background_color: 0, 0, 0, 0
                size_hint: 1, None
                height: config.wysokosc_opcji
                text: config.s1_name
                font_name: config.czcionka
                color: config.kolor_tekstu
                kart: 1
                on_press: root.karta(self.kart)
            Button:
                background_color: 0, 0, 0, 0
                size_hint: 1, None
                height: config.wysokosc_opcji
                text: config.s2_name
                font_name: config.czcionka
                color: config.kolor_tekstu
                kart: 2
                on_press: root.karta(self.kart)
            Button:
                background_color: 0, 0, 0, .1
                size_hint: 1, None
                height: config.wysokosc_opcji
                text: config.s3_name
                font_name: config.czcionka
                color: config.kolor_tekstu
                kart: 3
                on_press: root.karta(self.kart)
            Button:
                background_color: 0, 0, 0, 0
                size_hint: 1, None
                height: config.wysokosc_opcji
                text: config.s4_name
                font_name: config.czcionka
                color: config.kolor_tekstu
                kart: 4
                on_press: root.karta(self.kart)
            Button:
                background_color: 0, 0, 0, 0
                size_hint: 1, None
                height: config.wysokosc_opcji
                text: config.s5_name
                font_name: config.czcionka
                color: config.kolor_tekstu
                kart: 5
                on_press: root.karta(self.kart)
            Button:
                background_color: 0, 0, 0, 0
                size_hint: 1, None
                height: config.wysokosc_opcji
                text: config.s6_name
                font_name: config.czcionka
                color: config.kolor_tekstu
                kart: 6
                on_press: root.karta(self.kart)
            Button:
                background_color: 0, 0, 0, 0
                size_hint: 1, None
                height: config.wysokosc_opcji
                text: config.s7_name
                font_name: config.czcionka
                color: config.kolor_tekstu
                kart: 7
                on_press: root.karta(self.kart)

#trzy_kreski -> włącz/wyłącz
        ToggleButton:
            size_hint: None, None
            size: "48dp", "48dp"
            top: root.top
            on_state: root.wlacznik_menu(self)
            background_down: join("resources", "menu_button.png")
            background_normal: join("resources", "menu_button.png")


<ParishPopup>:
    title: "" # rm default title
    title_size: 0
    separator_height: 0 # rm ugly stripe 
    background: "" # rm default bg
    size_hint: (0.25, 0.5)
    background_color: config.kolor_tla

    nazwa_parafii: nazwa_parafii

    BoxLayout: # main content layout
        orientation: "vertical"

        BoxLayout: # custom title bar
            orientation: "horizontal"
            size_hint_y: None
            height: 40

            Label:
                text: "Szczegóły"
                font_name: config.czcionka
                color: config.kolor_tekstu
                size_hint_x: 0.8

            Button: # close button
                text: "X"
                font_name: config.czcionka
                color: config.kolor_tekstu
                size_hint_x: 0.2
                on_press: root.dismiss()
                background_normal: ""
                background_down: ""
                background_color: config.kolor_akcentu

        Label:
            id: nazwa_parafii
            # text: "<nazwa parafii>"
            font_name: config.czcionka
            color: config.kolor_tekstu
            halign: 'center'  # Align text to the left
            valign: 'middle'  # Align text to the top
            size_hint: .7, .95
            text_size: self.size
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            font_size: self.width / 7


        Button: # get to the parish subsection
            on_press: root.go_to_parish()


<ParishMarker>:
    on_release: root.marker_popup()
    # source: 'image.png'