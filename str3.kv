#:kivy 2.3.0
#:import join os.path.join
#:import config config

# see editing_foreword.txt


<ScreenDrei>:
    mapview: mapview

    FloatLayout:

#ten_złoty_pasek_na_górze
        canvas:
            Color:
                rgba: config.kolor_akcentu
            Rectangle:
                pos: self.pos
                size: self.size

        FloatLayout:
            id: lajout
            size_hint: 1, None

#tutaj_koktent
            BoxLayout:
                orientation: 'vertical'
                size_hint: (1,1)

                MapView:
                    id: mapview
                    on_parent: self.center_on(50.0412, 21.9991)
                    zoom: 10

        HamburgerMenu:
            id: menu
            current_tab: 3


<ParishMarker>:
    on_release: root.marker_popup()
    # source: 'image.png'