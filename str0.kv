<ScreenNull>:
    FloatLayout:

#ten_złoty_pasek_na_górze
        canvas:
            Color:
                rgba: root.kolor_akcentu
            Rectangle:
                pos: self.pos
                size: self.size

        ScrollView:
            id: lajout
            #do_scroll_x: False
            #do_scroll_y: True
            size_hint: 1, None

#tutaj_koktent
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height

                Label:
                    text: 'Gallia est omnis divisa in partes tres\n' * 314  # Repeat text to make it scrollable
                    font_name: root.czcionka
                    color: root.kolor_tekstu
                    text_size: self.width, None
                    size_hint_y: None  # Allow the label to have a specific height
                    height: self.texture_size[1]  # Set height based on the label's content
                    padding: 10, 10

                    canvas.before:
                        Color:
                            rgba: root.kolor_tla
                        Rectangle:
                            pos: self.pos
                            size: self.size



#tło_pod_opcjami
        FloatLayout:
            id: opcie

            pos_hint: {"x": 0, "y": 0}
            size_hint: None, None
            width: root.szerokosc_opcji

            canvas:
                Color:
                    rgba: root.kolor_tla[0], root.kolor_tla[1], root.kolor_tla[2], root.menu_wi
                Rectangle:
                    pos: self.pos
                    size: self.size

